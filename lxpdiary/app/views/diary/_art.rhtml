<div class="articolo">

 <h3> <%= link_to art.titolo, 
          "controller" => "diary",
          "action" => "view",
          "id" => art.id
       %>
 </h3>
 <p>  <%=art.testo  %></p>
 <span>
  <%= link_to "Link",art.link %> :: 
